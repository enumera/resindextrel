<div class="border-form-div" id="log_in_form">

<h2>Log in</h2>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], :autofocus => true %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "log in" %></p>
<% end %>
</div>