<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Trello type</th>
    <th>Resindex</th>
    <th>Completed</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Estimate</th>
    <th>Difficulty</th>
    <th>Importance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.trello_type %></td>
    <td><%= task.resindex %></td>
    <td><%= task.completed %></td>
    <td><%= task.start_date %></td>
    <td><%= task.end_date %></td>
    <td><%= task.estimate %></td>
    <td><%= task.difficulty %></td>
    <td><%= task.importance %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

