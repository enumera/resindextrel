 <% if !mobile? || ipad? %>
<div class="col-sm-9">
      <div class="panel panel-default col-md-12" id ="task-panel">
        <div class="panel-heading" id="things"><h4>Jobs to do...</h4><span><button class= "btn btn-xs btn-info" id= "top10" title="Find the top 10 jobs sorted by resindex across all projects.">Top 10</span><span><button class= "btn btn-xs btn-info" id= "trello_search" title="Only display trello jobs sorted by resindex.">Trello jobs only</span><span><button class= "btn btn-xs btn-info" id= "non_trello_search" title="Show only non-trello jobs sorted by resindex.">Non-Trello jobs only</span></div>
        <div class="panel-body" >
          <!-- start of form -->
          <div class="row" id="add-task">
            <div class ="col-xs-8">
              <div class="input-group">
                <input type="hidden" id="projectShown">
                 <input type="hidden" id="goalShown">
                  <input type="text" class="form-control mobile-task-name" placeholder="New Job">
                  <span class="input-group-btn">
                    <button class="btn btn-default mobile-add" type="button">Add</button>
                  </span>
              </div>
            </div>
          </div> 
          <!-- end of form -->
          <div class="list-group" id="task-list-group">
          </div>
        </div>
      </div>


<% else %>
  <div class="col-sm-12">
      <div class="panel panel-default col-md-12" id ="task-panel">
        <div class="panel-heading" id="things"><h4>Search</h4></div>
          <div class="panel-body" >
          <button class= "btn btn-lg btn-info" id= "top10" title="Find the top 10 jobs sorted by resindex across all projects.">Top 10</button>
            <div class="list-group" id="task-list-group">
          </div>
        </div>
      </div>


 <% end %>